<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:id="@+id/scrollView2">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="200dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Popular Event"
                android:id="@+id/textView" android:layout_column="0" android:layout_margin="5dp"/>
            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/linearLayout" android:layout_alignStart="@+id/linearLayout"
                android:layout_below="@+id/textView" android:id="@+id/tableLayout"
                android:layout_margin="1dp">
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageButton" android:layout_column="0"
                        android:src="@android:drawable/sym_def_app_icon"/>
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageButton2" android:layout_column="1"
                        android:src="@android:drawable/sym_def_app_icon"/>
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageButton3" android:layout_column="2" android:src="@android:drawable/sym_def_app_icon"/>
                </TableRow>
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Friday Basketball"
                        android:id="@+id/textView2" android:layout_column="0"
                        android:textColor="#ff000000"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Baseball@HPER"
                        android:id="@+id/textView3" android:layout_column="1"
                        android:textColor="#ff000000"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Badminton@SPH#3"
                        android:id="@+id/textView4" android:layout_column="2"
                        android:textColor="#ff000000" android:textAlignment="center"/>
                </TableRow>
            </TableLayout>
            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="44dp" android:layout_margin="5dp">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Baseball"
                    android:id="@+id/button4" android:layout_row="0" android:layout_column="0"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Basketball"
                    android:id="@+id/button5" android:layout_row="0" android:layout_column="1"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Football"
                    android:id="@+id/button6" android:layout_row="0" android:layout_column="2"/>
                <ImageButton
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:id="@+id/imageButton4" android:layout_row="0" android:layout_column="3"
                    android:src="@android:drawable/ic_media_ff" android:layout_gravity="top|bottom|right"/>
            </GridLayout>
            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/scrollView">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent">
                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Baseball"
                            android:id="@+id/textView5" android:layout_margin="5dp"/>
                        <ImageButton
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:id="@+id/imageButton5" android:src="@android:drawable/ic_media_ff"
                            android:layout_gravity="right" android:layout_margin="5dp"/>
                    </TableRow>
                    <GridLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="103dp"
                            android:layout_height="103dp"
                            android:id="@+id/imageView" android:layout_row="0" android:layout_column="0"
                            android:src="@drawable/baseball1" android:layout_margin="3dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Event Detail"
                            android:id="@+id/textView6" android:layout_row="0" android:layout_column="1"/>
                        <ImageView
                            android:layout_width="103dp"
                            android:layout_height="103dp"
                            android:id="@+id/imageView2" android:layout_row="0" android:layout_column="2"
                            android:src="@drawable/baseball4" android:layout_margin="3dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Event Detail"
                            android:id="@+id/textView7" android:layout_row="0" android:layout_column="3"/>
                        <ImageView
                            android:layout_width="103dp"
                            android:layout_height="103dp"
                            android:id="@+id/imageView3" android:layout_row="1" android:layout_column="0"
                            android:src="@drawable/baseball2" android:layout_margin="3dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Event Detail"
                            android:id="@+id/textView8" android:layout_row="1" android:layout_column="1"/>
                        <ImageView
                            android:layout_width="103dp"
                            android:layout_height="103dp"
                            android:id="@+id/imageView4" android:layout_row="1" android:layout_column="2"
                            android:src="@drawable/baseball3" android:layout_margin="3dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Event Detail"
                            android:id="@+id/textView9" android:layout_row="1" android:layout_column="3"/>
                    </GridLayout>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Basketball"
                            android:id="@+id/textView10"/>
                        <ImageButton
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:id="@+id/imageButton6" android:src="@android:drawable/ic_media_ff"/>
                    </TableRow>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true" android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true" android:id="@+id/linearLayout">
        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="53dp" android:layout_gravity="bottom">
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:background="#39fffdca">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home"
                    android:id="@+id/home" android:layout_column="0" android:layout_margin="5dp"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/my_center"
                    android:id="@+id/my_center" android:layout_column="1"
                    android:layout_margin="5dp"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/new_event"
                    android:id="@+id/new_event" android:layout_column="2"
                    android:layout_margin="5dp"/>
            </TableRow>
        </TableLayout>
    </LinearLayout>
</RelativeLayout>
